<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} %magenta([%thread]) %highlight(%-5level) %logger{36}.%M - %msg%n</pattern>
        </encoder>
    </appender>
    
    <appender name="FILEOUTPUT" class="ch.qos.logback.core.rolling.RollingFileAppender">
    	<file>logs/app.log</file>>
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} ([%thread]) (%-5level) %logger{36}.%M - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
	        <fileNamePattern>logs/log_%d{dd-MM-yyyy}.log</fileNamePattern>
	        <maxHistory>10</maxHistory>
	        <totalSizeCap>100MB</totalSizeCap>
	    </rollingPolicy>
    </appender>
    
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
    
    <logger name="com.example.Example.controller" additivity="false" level="debug">
	    <appender-ref ref="FILEOUTPUT"/>
	</logger>
</configuration>


